rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to blog-images folder for authenticated users
    match /blog-images/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read access to uploaded images
    match /blog-images/{allPaths=**} {
      allow read: if true;
    }
  }
}
